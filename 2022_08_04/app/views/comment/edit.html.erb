<div class="container text-center">
  <h3>You want to edit this comment? You're at the right place.</h3>
  <br>
  <%= form_with url: gossip_comment_path, method: :patch, local: true do |form| %>
    <p>Give us the dirt</p>
    <%= form.text_area :comment_content, size: "70x5" %>
    <br>
    <%= form.submit "Publish" %>
  <% end %>

   <%= form_with url: gossip_comment_path, method: :delete, local: true do |form| %>
    <br>
    <%= form.submit "Delete comment" %>
  <% end %>



  <br>
  <br>
  <% if @comment.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <p>We were not able to edit this comment for the following reason(s):</p>
      <ul style="list-style-type:none">
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <br>
    <p>Please try again</p>
  <% end %>
</div>
